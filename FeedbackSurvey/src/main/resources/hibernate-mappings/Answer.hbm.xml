<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.fulminators.model.Answer" table="answer">

		<id name="answerID" type="int" column="answerid">
			<generator class="native" />
		</id>

		<property name="questionID" column="questionid" type="int" />

		<property name="participantID" column="participantid" type="int" />

		<property name="choiceText" column="choiceText" type="string" />

		<property name="answer" column="answer" type="string" />

	</class>
</hibernate-mapping>